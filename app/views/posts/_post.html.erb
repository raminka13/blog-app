<div class="posts">
  <%= link_to user_post_path(post.author_id, post.id) do %>
    <h4><%=post.title%></h4>
  <%end%>
  <p><%=post.text.split("\n").first%></p>
  <span>Comments: <%=post.comments_counter%>, Likes: <%=post.likes_counter%></span>

<div class= "comments">
    <%post.recent_comments.each do |comment|%>
        <p><%= comment.id %> - <%= comment.author.name %>: <%=comment.text%></p>
    <%end%>
</div>

</div>